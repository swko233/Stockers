<%= javascript_include_tag "bookmarks.js" %>
<%= stylesheet_link_tag "bookmarks/new", :medea => "all" %>

<div class="container">

	<h1>登録フォーム</h1>
	<div class="post-title">
		<div class="active">ブックマーク</div>
		<div><%= link_to "自作サービス", new_work_path %></div>
	</div>
	<div class="new-posts">
		<%= form_for(@bookmark) do |f| %>
			<div class="field">
				<%= f.label :servive_name, 'サービス名' %><span class="form-require">必須</span></br>
				<%= f.text_field :service_name %>
				<% if @service_name_errmsg.present? %>
					<div class="error-message">入力してください</div>
				<% end %>
			</div>
			<div class="field">
				<%= f.label :url, 'URL' %><span class="form-require">必須</span></br>
				<%= f.text_field :url %>
				<% if @url_errmsg.present? %>
					<% if @already_exist_flag == true %>
						<div class="error-message">すでにブックマーク済みのURLです</div>
					<% else %>
						<div class="error-message">入力してください</div>
					<% end %>
				<% end %>
			</div>
			<div class="field">
				<%= f.label :overview, 'サービスの概要' %></br>
				<%= f.text_field :overview %>
			</div>
			<div class="field">
				<%= f.label :description, 'サービスの詳細' %></br>
				<%= f.text_area :description %>
			</div>
			<div class="field">
				<%= f.label :service_image, 'メインイメージ' %></br>
				<%= f.attachment_field :service_image %>
			</div>
			<div class="field">
				<%= f.label :folder_id, 'フォルダ' %></br>
				<%= f.text_field :folder_id %> <!-- 仮に -->
			</div>
			<div class="field">
				<%= f.label :tag_list, 'タグ' %></br>
				<%= text_field_tag 'bookmark[tag_list]', @bookmark.tag_list.join(','), "data-role" => "tagsinput" %> <!-- 仮に -->
			</div>
			<div class="field">
				<%= f.label :is_published, '公開設定' %></br>
				<span>公開<%= f.radio_button :is_published, true %></span>
				<span>非公開<%= f.radio_button :is_published, false %></span>
			</div>
			<div class="field">
				<%= f.label :is_recommended, 'おすすめ設定' %></br>
				<span>する<%= f.radio_button :is_recommended, true %></span>
				<span>しない<%= f.radio_button :is_recommended, false %></span>
				<% if @too_many_recommended_flag.present? %>
					<div class="error-message">おすすめ設定は3つまでです</div>
				<% end %>
			</div>
			<div class="actions">
				<%= f.submit 'ブックマークに追加する', class: "btn btn-success" %>
			</div>
		<% end %>
	</div>
</div>